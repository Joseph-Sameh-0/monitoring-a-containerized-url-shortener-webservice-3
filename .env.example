# JWT Secret Key (must be at least 32 characters for HS256)
# Generate a secure random key for production
JWT_SECRET=myVerySecureSecretKeyForJWTTokenGenerationThatIsAtLeast32CharactersLongAndSecure

# Grafana credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Email notification settings
EMAIL_ADDRESSES=alerts@example.com

# SMTP Configuration for Grafana Email Notifications
GF_SMTP_ENABLED=true
GF_SMTP_HOST=smtp.gmail.com:587
GF_SMTP_USER=your-email@gmail.com
GF_SMTP_PASSWORD=your-app-password
GF_SMTP_FROM_ADDRESS=your-email@gmail.com
GF_SMTP_FROM_NAME=Grafana Alerts

# Application base URL
BASE_URL=http://localhost:9000
